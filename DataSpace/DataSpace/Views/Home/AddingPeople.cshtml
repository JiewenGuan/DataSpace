@model DataSpace.Models.Participation

@{
    ViewData["Title"] = "AddingPeople";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adding People</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddingPeople">
            <input type="hidden" asp-for="ExperimentID" value="@ViewData["ExperimentID"]" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonID" class="control-label"></label>
                <select asp-for="PersonID" class="form-control" asp-items="ViewBag.PersonID"></select>
                <a asp-controller="People" asp-action="Create" target="_blank" >Can't Find the people you want? Create New People</a>
            </div>
            <div class="form-group">
                <label asp-for="RoleID" class="control-label"></label>
                <select asp-for="RoleID" class="form-control" asp-items="ViewBag.RoleID"></select>
                <a asp-controller="Role" asp-action="Create" target="_blank">Can't Find the Role you want? Create New Role</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

